run = "npm run dev"
hidden = [".config", "package-lock.json"]
language = "nodejs"
modules = ["nodejs-20", "web", "nix"]

[packager]
language = "nodejs"
  [packager.features]
  packageSearch = true
  guessImports = true
  enabledForHosting = true

[env]
XDG_CONFIG_HOME = "/home/runner/.config"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run dev"]
deploymentTarget = "cloudrun" 

[workflows]

[[workflows.workflow]]
name = "bootstrap"
mode = "sequential"
author = 5378351

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run install-all"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000
